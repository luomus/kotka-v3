{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@kotka/api/mappers": ["libs/kotka-api/mappers/src/index.ts"],
      "@kotka/api/services": ["libs/kotka-api/services/src/index.ts"],
      "@kotka/shared/models": ["libs/shared/models/src/index.ts"],
      "@kotka/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@kotka/ui/autocomplete": [
        "libs/kotka-ui/components/autocomplete/src/index.ts"
      ],
      "@kotka/ui/base": ["libs/kotka-ui/base/src/index.ts"],
      "@kotka/ui/datatable": [
        "libs/kotka-ui/components/datatable/src/index.ts"
      ],
      "@kotka/ui/document-datatable": [
        "libs/kotka-ui/components/document-datatable/src/index.ts"
      ],
      "@kotka/ui/form-view": [
        "libs/kotka-ui/form-view/src/index.ts"
      ],
      "@kotka/ui/laji-form": [
        "libs/kotka-ui/components/laji-form/src/index.ts"
      ],
      "@kotka/ui/main-content": [
        "libs/kotka-ui/components/main-content/src/index.ts"
      ],
      "@kotka/ui/pipes": ["libs/kotka-ui/pipes/src/index.ts"],
      "@kotka/ui/services": ["libs/kotka-ui/services/src/index.ts"],
      "@kotka/ui/spinner": ["libs/kotka-ui/components/spinner/src/index.ts"],
      "@kotka/ui/viewer": ["libs/kotka-ui/components/viewer/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
